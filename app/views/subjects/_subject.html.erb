<li class="col-xs-12">
  <div class="subject col-xs-12">
      <h3><%= link_to subject.name, subject %></h3>

  </div>
  <div class="col-xs-12">
    <div class="col-xs-9 break">
      <%= subject.description %>
    </div>
    <div class="col-xs-3 listButton">
      <%= link_to t("editSubject"), edit_subject_path(subject),
        class: "btn btn-success" %>
      <%= link_to t("deleteSubject"), subject, method: :delete,
          data: {confirm: "You sure?"}, class: "btn btn-danger" %>
    </div>
  </div>
</li>
